@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HomeMovieViewModel
@{
    ViewData["Title"] = "Edit movie";
}
<div class="row">
    <h2>Edit movie</h2>
    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div><input asp-for="Movie!.MovieId" hidden />
        <span asp-validation-for="Movie!.Title" class="text-danger"></span>
        </div>
        <div><input asp-for="Movie!.Title" /></div>
        <div><input asp-for="Movie!.Director" /></div>
        <div><input asp-for="Movie!.ReleaseDate" type="date" /></div>
        <div><textarea asp-for="Movie!.Description" rows="7"></textarea></div>
	<div><input type="checkbox" class="checkbox" value="true" asp-for="Movie.Seen"/> Mark as seen</div>
        <div><input type="file" class="form-control" accept="image/*" name="ImageFile" style="max-width: 500px;"/></div>
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <div><a href="/Home/Movies" class="btn btn-danger">Cancel</a></div>
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

